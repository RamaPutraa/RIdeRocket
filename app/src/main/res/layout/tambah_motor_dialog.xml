<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp">

        <EditText
            android:id="@+id/etNamaMotor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nama Motor"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/etDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Deskripsi"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/etTahunPembuatan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Tahun Pembuatan"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="10dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/etTransmisi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Transmisi"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/etHargaSewa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Harga Sewa"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="10dp"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Simpan"
            android:background="@drawable/send_button_bg"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>
